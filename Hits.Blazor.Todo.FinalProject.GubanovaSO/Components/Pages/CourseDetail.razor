@page "/courses/{id:int}"
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Models
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Data.Services
@inject CourseService CourseService
@inject NavigationManager Navigation

<PageTitle>Детали курса - Education Platform</PageTitle>

@if (course == null)
{
    <div class="container mt-5">
        <div class="alert alert-info">Загрузка курса...</div>
    </div>
}
else
{
    <div class="course-detail-container">
        <div class="course-detail-header">
            @if (!string.IsNullOrEmpty(course.ImageUrl))
            {
                <img src="@course.ImageUrl" class="course-detail-image" alt="@course.Title" />
            }
            else
            {
                <div class="course-detail-image-placeholder">Нет изображения</div>
            }

            <div class="course-detail-info">
                <h1>@course.Title</h1>
                <p class="course-detail-category">@course.Category</p>

                <div class="course-detail-meta">
                    <span class="badge-difficulty">@GetDifficultyLevel(course.DifficultyLevel)</span>
                    <span>Продолжительность: @course.DurationHours часов</span>
                </div>

                <p class="course-detail-description">@course.Description</p>

                <div class="course-detail-actions">
                    <button class="btn btn-primary btn-lg" @onclick="EnrollCourse">
                        Записаться на курс
                    </button>
                    <button class="btn btn-outline-secondary btn-lg" @onclick="GoBack">
                        Вернуться
                    </button>
                </div>
            </div>
        </div>

        <div class="course-content">
            <div class="lessons-section">
                <h2>Уроки курса (@course.Lessons.Count)</h2>

                @if (course.Lessons.Count == 0)
                {
                    <p class="text-muted">В этом курсе пока нет уроков</p>
                }
                else
                {
                    <div class="lessons-list">
                        @foreach (var lesson in course.Lessons.OrderBy(l => l.OrderNumber))
                        {
                            <div class="lesson-item">
                                <div class="lesson-number">@lesson.OrderNumber</div>
                                <div class="lesson-info">
                                    <h4>@lesson.Title</h4>
                                    <p class="lesson-status">
                                        @if (lesson.IsPublished)
                                        {
                                            <span class="badge bg-success">Опубликовано</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">На модерации</span>
                                        }
                                    </p>
                                </div>
                                <button class="btn btn-sm btn-primary"
                                        @onclick="() => ViewLesson(lesson.Id)">
                                    Просмотреть
                                </button>
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="tests-section">
                <h2>Тесты курса (@course.Tests.Count)</h2>

                @if (course.Tests.Count == 0)
                {
                    <p class="text-muted">В этом курсе пока нет тестов</p>
                }
                else
                {
                    <div class="tests-list">
                        @foreach (var test in course.Tests.Where(t => t.IsActive))
                        {
                            <div class="test-item">
                                <div class="test-info">
                                    <h4>@test.Title</h4>
                                    @if (!string.IsNullOrEmpty(test.Description))
                                    {
                                        <p>@test.Description</p>
                                    }
                                    <p class="test-meta">Проходной балл: @test.PassingScore</p>
                                </div>
                                <button class="btn btn-sm btn-success"
                                        @onclick="() => TakeTest(test.Id)">
                                    Пройти тест
                                </button>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
}

<style>
    .course-detail-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .course-detail-header {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        margin-bottom: 60px;
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .course-detail-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 8px;
    }

    .course-detail-image-placeholder {
        width: 100%;
        height: 400px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
    }

    .course-detail-info h1 {
        margin-top: 0;
        margin-bottom: 10px;
        color: #333;
    }

    .course-detail-category {
        color: #667eea;
        font-weight: 500;
        margin-bottom: 20px;
    }

    .course-detail-meta {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
        align-items: center;
    }

    .badge-difficulty {
        background: #667eea;
        color: white;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .course-detail-description {
        color: #666;
        line-height: 1.6;
        margin-bottom: 30px;
    }

    .course-detail-actions {
        display: flex;
        gap: 15px;
    }

    .btn-outline-secondary {
        border: 1px solid #ddd;
        color: #333;
        background: white;
    }

        .btn-outline-secondary:hover {
            border-color: #667eea;
            color: #667eea;
        }

    .course-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
    }

    .lessons-section, .tests-section {
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        .lessons-section h2, .tests-section h2 {
            margin-top: 0;
            color: #333;
            margin-bottom: 20px;
        }

    .lessons-list, .tests-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .lesson-item, .test-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        border: 1px solid #eee;
        border-radius: 6px;
        transition: background 0.3s;
    }

        .lesson-item:hover, .test-item:hover {
            background: #f9f9f9;
        }

    .lesson-number {
        width: 40px;
        height: 40px;
        background: #667eea;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        flex-shrink: 0;
    }

    .lesson-info, .test-info {
        flex: 1;
    }

        .lesson-info h4, .test-info h4 {
            margin: 0 0 5px 0;
            color: #333;
        }

    .lesson-status, .test-meta {
        margin: 5px 0 0 0;
        font-size: 0.9rem;
        color: #666;
    }

    .bg-success {
        background: #28a745;
    }

    .bg-secondary {
        background: #6c757d;
    }

    .text-muted {
        color: #999;
    }
</style>

@code {
    [Parameter]
    public int Id { get; set; }

    private Course? course;

    protected override async Task OnInitializedAsync()
    {
        course = await CourseService.GetCourseByIdAsync(Id);
        if (course == null)
        {
            Navigation.NavigateTo("/notfound");
        }
    }

    private void EnrollCourse()
    {
        Navigation.NavigateTo("/my-learning");
    }

    private void ViewLesson(int lessonId)
    {
        Navigation.NavigateTo($"/lessons/{lessonId}");
    }

    private void TakeTest(int testId)
    {
        Navigation.NavigateTo($"/tests/take/{testId}");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/courses");
    }

    private string GetDifficultyLevel(int level) => level switch
    {
        1 => "Начинающий",
        2 => "Средний",
        3 => "Продвинутый",
        _ => "Неизвестно"
    };
}
