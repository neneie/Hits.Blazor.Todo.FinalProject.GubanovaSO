@page "/admin/dashboard"

<PageTitle>Панель администратора - Education Platform</PageTitle>

<div class="dashboard-container">
    <h1>Панель администратора</h1>

    <div class="stats-grid">
        <div class="stat-card">
            <h3>Всего курсов</h3>
            <p class="stat-value">15</p>
        </div>
        <div class="stat-card">
            <h3>Активных пользователей</h3>
            <p class="stat-value">245</p>
        </div>
        <div class="stat-card">
            <h3>Пройденных тестов</h3>
            <p class="stat-value">1,340</p>
        </div>
        <div class="stat-card">
            <h3>Средняя оценка</h3>
            <p class="stat-value">82%</p>
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

        .dashboard-container h1 {
            color: #333;
            margin-bottom: 30px;
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        .stat-card h3 {
            margin: 0 0 15px 0;
            color: #666;
            font-size: 0.95rem;
        }

    .stat-value {
        margin: 0;
        font-size: 2rem;
        font-weight: bold;
        color: #667eea;
    }
</style>

