@page "/courses/{CourseId:int}"
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Models
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Data.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject CourseService CourseService
@inject EnrollmentService EnrollmentService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Course - Hits.Todo</PageTitle>

@if (course == null)
{
    <div class="container mt-5">
        <div class="alert alert-danger">
            Course not found
        </div>
        <a href="/courses" class="btn btn-primary">Back to Courses</a>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm mb-4">
                    @if (!string.IsNullOrEmpty(course.ImageUrl))
                    {
                        <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" style="height: 300px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 300px;">
                            <span class="text-white">No Image</span>
                        </div>
                    }

                    <div class="card-body">
                        <h1 class="card-title">@course.Title</h1>

                        <div class="mb-3">
                            <span class="badge bg-primary">@GetDifficultyLevel(course.DifficultyLevel)</span>
                            <span class="badge bg-info">@course.DurationHours hours</span>
                            <span class="badge bg-secondary">@course.Lessons.Count lessons</span>
                        </div>

                        <hr />

                        <h3>Description</h3>
                        <p>@course.Description</p>

                        <hr />

                        <h3>Lessons</h3>
                        @if (course.Lessons.Count == 0)
                        {
                            <p class="text-muted">No lessons yet</p>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var lesson in course.Lessons.OrderBy(l => l.OrderNumber))
                                {
                                    <a href="/lessons/@lesson.Id" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">@lesson.Title</h5>
                                            <small>Lesson @lesson.OrderNumber</small>
                                        </div>
                                        <p class="mb-1 text-muted">@(lesson.Content.Length > 100 ? lesson.Content.Substring(0, 100) + "..." : lesson.Content)</p>
                                    </a>
                                }
                            </div>
                        }

                        <hr />

                        <h3>Tests</h3>
                        @if (course.Tests.Count == 0)
                        {
                            <p class="text-muted">No tests yet</p>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var test in course.Tests)
                                {
                                    <a href="/tests/@test.Id" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">@test.Title</h5>
                                            <small>@test.Questions.Count questions</small>
                                        </div>
                                        <p class="mb-1 text-muted">Passing score: @test.PassingScore%</p>
                                    </a>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-body">
                        <h4 class="card-title">Information</h4>

                        <div class="mb-3">
                            <strong>Category:</strong>
                            <p>@course.Category</p>
                        </div>

                        <div class="mb-3">
                            <strong>Duration:</strong>
                            <p>@course.DurationHours hours</p>
                        </div>

                        <div class="mb-3">
                            <strong>Created:</strong>
                            <p>@course.CreatedDate.ToString("dd.MM.yyyy")</p>
                        </div>

                        <hr />

                        <AuthorizeView>
                            <Authorized>
                                @if (isEnrolled)
                                {
                                    <div class="alert alert-success">
                                        You are already enrolled in this course
                                    </div>
                                    <a href="/my-learning" class="btn btn-primary w-100">
                                        Go to Learning
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-success w-100" @onclick="EnrollCourse" disabled="@isLoading">
                                        @if (isLoading)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                            <span>Enrolling</span>
                                        }
                                        else
                                        {
                                            <span>Enroll in Course</span>
                                        }
                                    </button>
                                }
                            </Authorized>
                            <NotAuthorized>
                                <div class="alert alert-info">
                                    Please <a href="/login">login</a> or <a href="/register">register</a> to enroll
                                </div>
                                <a href="/login" class="btn btn-primary w-100">
                                    Login
                                </a>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="/courses" class="btn btn-secondary">
                Back to Courses
            </a>
        </div>
    </div>
}

@code {
    [Parameter]
    public int CourseId { get; set; }

    private Course? course;
    private bool isEnrolled = false;
    private bool isLoading = false;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        course = await CourseService.GetCourseByIdAsync(CourseId);

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (!string.IsNullOrEmpty(userId))
            {
                var enrollment = await EnrollmentService.GetEnrollmentAsync(userId, CourseId);
                isEnrolled = enrollment != null;
            }
        }
    }

    private async Task EnrollCourse()
    {
        if (string.IsNullOrEmpty(userId))
            return;

        isLoading = true;
        try
        {
            await EnrollmentService.EnrollUserAsync(userId, CourseId);
            isEnrolled = true;
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetDifficultyLevel(int level)
    {
        return level switch
        {
            1 => "Beginner",
            2 => "Intermediate",
            3 => "Advanced",
            _ => "Unknown"
        };
    }
}
