@page "/courses/{CourseId:int}"
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Models
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Data.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject CourseService CourseService
@inject EnrollmentService EnrollmentService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Курс - Hits.Todo</PageTitle>

@if (course == null)
{
    <div class="container mt-4">
        <div class="alert alert-danger">Курс не найден</div>
        <a href="/courses" class="btn btn-secondary">Вернуться</a>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <h2>@course.Title</h2>
                <div class="mb-3">
                    <span class="badge bg-primary">@GetDifficultyLevel(course.DifficultyLevel)</span>
                    <span class="badge bg-secondary">@course.DurationHours часов</span>
                    <span class="badge">@course.Lessons.Count уроков</span>
                </div>

                <h4 class="mt-4">Описание</h4>
                <p>@course.Description</p>

                <h4 class="mt-4">Уроки (@course.Lessons.Count)</h4>
                @if (course.Lessons.Count == 0)
                {
                    <p class="text-muted">Уроки отсутствуют</p>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var lesson in course.Lessons.OrderBy(l => l.OrderNumber))
                        {
                            <li class="list-group-item">
                                <strong>#@lesson.OrderNumber - @lesson.Title</strong>
                                <p class="text-muted small mb-0">@(lesson.Content.Length > 100 ? lesson.Content.Substring(0, 100) + "..." : lesson.Content)</p>
                            </li>
                        }
                    </ul>
                }

                <h4 class="mt-4">Тесты (@course.Tests.Count)</h4>
                @if (course.Tests.Count == 0)
                {
                    <p class="text-muted">Тесты отсутствуют</p>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var test in course.Tests)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@test.Title</span>
                                <small class="text-muted">@test.Questions.Count вопросов</small>
                            </li>
                        }
                    </ul>
                }
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5>Информация</h5>
                        <p><strong>Категория:</strong> @course.Category</p>
                        <p><strong>Продолжительность:</strong> @course.DurationHours часов</p>
                        <p><strong>Создан:</strong> @course.CreatedDate.ToString("dd.MM.yyyy")</p>

                        <AuthorizeView>
                            <Authorized>
                                @if (isEnrolled)
                                {
                                    <div class="alert alert-success mb-2">Вы уже записаны</div>
                                    <a href="/my-learning" class="btn btn-primary w-100">Перейти к обучению</a>
                                }
                                else
                                {
                                    <button class="btn btn-success w-100" @onclick="EnrollCourse" disabled="@isLoading">
                                        @if (isLoading)
                                        {
                                            <span>Записываю...</span>
                                        }
                                        else
                                        {

                                            <span>Записаться</span>
                                        }
                                    </button>
                                }
                            </Authorized>
                            <NotAuthorized>
                                <p class="text-muted small">Войдите чтобы записаться</p>
                                <a href="/Account/Login" class="btn btn-primary w-100">Войти</a>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int CourseId { get; set; }

    private Course? course;
    private bool isEnrolled = false;
    private bool isLoading = false;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        course = await CourseService.GetCourseByIdAsync(CourseId);

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (!string.IsNullOrEmpty(userId))
            {
                var enrollment = await EnrollmentService.GetEnrollmentAsync(userId, CourseId);
                isEnrolled = enrollment != null;
            }
        }
    }

    private async Task EnrollCourse()
    {
        if (string.IsNullOrEmpty(userId))
            return;

        isLoading = true;
        await EnrollmentService.EnrollUserAsync(userId, CourseId);
        isEnrolled = true;
        isLoading = false;
    }

    private string GetDifficultyLevel(int level) => level switch
    {
        1 => "Начинающий",
        2 => "Средний",
        3 => "Продвинутый",
        _ => "Неизвестно"
    };
}
