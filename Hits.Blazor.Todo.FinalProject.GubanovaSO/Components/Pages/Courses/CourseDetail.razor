@page "/courses/{CourseId:int}"
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Models
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Data.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject CourseService CourseService
@inject EnrollmentService EnrollmentService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Курс - Образовательная платформа</PageTitle>

@if (course == null)
{
    <div class="container mt-4">
        <div class="alert alert-danger">Курс не найден</div>
        <a href="/courses" class="btn btn-secondary">Вернуться</a>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-8">
                <h2>@course.Title</h2>
                <p class="text-muted">@course.Category | @course.DurationHours часов | @course.Lessons.Count уроков</p>

                <h4 class="mt-4">Описание</h4>
                <p>@course.Description</p>

                <h4 class="mt-4">Уроки</h4>
                @if (course.Lessons.Count == 0)
                {
                    <p class="text-muted">Уроков нет</p>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var lesson in course.Lessons.OrderBy(l => l.OrderNumber))
                        {
                            <li class="list-group-item">
                                <strong>#@lesson.OrderNumber - @lesson.Title</strong>
                                <p class="text-muted small mb-0">@(lesson.Content.Length > 100 ? lesson.Content.Substring(0, 100) + "..." : lesson.Content)</p>
                            </li>
                        }
                    </ul>
                }
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5>Информация</h5>
                        <hr />
                        <p><strong>Категория:</strong> @course.Category</p>
                        <p><strong>Часов:</strong> @course.DurationHours</p>
                        <p><strong>Уроков:</strong> @course.Lessons.Count</p>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success">@successMessage</div>
                        }

                        <hr />

                        <AuthorizeView>
                            <Authorized>
                                @if (isEnrolled)
                                {
                                    <div class="alert alert-success mb-3">Вы уже записаны</div>
                                    <a href="/my-learning" class="btn btn-primary w-100">Перейти к обучению</a>
                                }
                                else
                                {
                                    <button class="btn btn-success w-100" @onclick="EnrollCourse" disabled="@isLoading">
                                        @if (isLoading)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                            <span>Записываю...</span>
                                        }
                                        else
                                        {
                                            <span>Записаться</span>
                                        }
                                    </button>
                                }
                            </Authorized>
                            <NotAuthorized>
                                <p class="small text-muted mb-3">Войдите, чтобы записаться</p>
                                <a href="/Account/Login" class="btn btn-primary w-100">Войти</a>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int CourseId { get; set; }

    private Course? course;
    private bool isEnrolled = false;
    private bool isLoading = false;
    private string? userId;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            course = await CourseService.GetCourseByIdAsync(CourseId);

            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

                if (!string.IsNullOrEmpty(userId))
                {
                    var enrollment = await EnrollmentService.GetEnrollmentAsync(userId, CourseId);
                    isEnrolled = enrollment != null;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Ошибка: " + ex.Message;
        }
    }

    private async Task EnrollCourse()
    {
        if (string.IsNullOrEmpty(userId))
        {
            errorMessage = "Войдите в систему";
            return;
        }

        try
        {
            isLoading = true;
            errorMessage = null;
            successMessage = null;

            var enrollmentId = await EnrollmentService.EnrollUserAsync(userId, CourseId);

            if (enrollmentId > 0)
            {
                isEnrolled = true;
                successMessage = "Вы записались на курс!";
                StateHasChanged();

                await Task.Delay(1500);
                Navigation.NavigateTo("/my-learning");
            }
            else
            {
                errorMessage = "Ошибка при записи";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Ошибка: " + ex.Message;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
