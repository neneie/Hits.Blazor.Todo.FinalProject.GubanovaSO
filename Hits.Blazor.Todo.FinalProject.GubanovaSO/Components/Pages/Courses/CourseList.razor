@page "/courses"
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Models
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Data.Services
@using Microsoft.AspNetCore.Authorization
@inject CourseService CourseService
@inject NavigationManager Navigation

<PageTitle>Курсы - Hits.Todo</PageTitle>

<div class="container mt-4">
    <h2>Курсы</h2>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <input type="text" 
               class="form-control" 
               placeholder="Поиск курсов..." 
               style="max-width: 300px;"
               @oninput="SearchCourses" />
        <AuthorizeView Roles="Instructor,Admin">
            <Authorized>
                <a href="/courses/create" class="btn btn-success">Создать курс</a>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (courses == null)
    {
        <p>Загрузка...</p>
    }
    else if (courses.Count == 0)
    {
        <p class="text-muted">Курсы не найдены</p>
    }
    else
    {
        <div class="row">
            @foreach (var course in courses)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text text-muted small">@(course.Description.Length > 80 ? course.Description.Substring(0, 80) + "..." : course.Description)</p>
                            <div class="mb-2">
                                <span class="badge bg-primary">@GetDifficultyLevel(course.DifficultyLevel)</span>
                                <span class="badge bg-secondary">@course.DurationHours ч</span>
                                <span class="badge">@course.Lessons.Count уроков</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <a href="/courses/@course.Id" class="btn btn-primary btn-sm w-100">Подробнее</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Course>? courses;
    private List<Course>? allCourses;

    protected override async Task OnInitializedAsync()
    {
        allCourses = await CourseService.GetAllCoursesAsync();
        courses = allCourses;
    }

    private async Task SearchCourses(ChangeEventArgs e)
    {
        var searchTerm = e.Value?.ToString() ?? string.Empty;
        courses = string.IsNullOrWhiteSpace(searchTerm) 
            ? allCourses 
            : await CourseService.SearchCoursesAsync(searchTerm);
    }

    private string GetDifficultyLevel(int level) => level switch
    {
        1 => "Начинающий",
        2 => "Средний",
        3 => "Продвинутый",
        _ => "Неизвестно"
    };
}
