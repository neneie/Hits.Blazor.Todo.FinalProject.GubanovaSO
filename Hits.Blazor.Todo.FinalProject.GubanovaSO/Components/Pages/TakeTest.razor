@page "/tests/take/{id:int}"
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Models
@inject NavigationManager Navigation

<PageTitle>Прохождение теста - Education Platform</PageTitle>

@if (test == null)
{
    <div class="container mt-5">
        <div class="alert alert-info">Загрузка теста...</div>
    </div>
}
else if (testCompleted)
{
    <div class="test-completion-container">
        <div class="completion-card">
            <h1>Тест завершён</h1>

            <div class="score-display">
                <h2>Ваш результат: @score/@totalQuestions</h2>
                <p class="score-percentage">@scorePercentage%</p>

                @if (isPassed)
                {
                    <p class="result-status passed">Тест пройден успешно</p>
                }
                else
                {
                    <p class="result-status failed">Требуется ещё одна попытка</p>
                }
            </div>

            <div class="completion-actions">
                <button class="btn btn-primary btn-lg" @onclick="RetakTest">
                    Пройти ещё раз
                </button>
                <button class="btn btn-outline-secondary btn-lg" @onclick="GoToCourse">
                    Вернуться к курсу
                </button>
            </div>
        </div>
    </div>
}
else
{
    <div class="test-container">
        <div class="test-header">
            <h1>@test.Title</h1>
            <div class="test-progress">
                <span>Вопрос @(currentQuestionIndex + 1) из @questionsList.Count</span>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: @progressPercentage%"></div>
                </div>
            </div>
        </div>

        <div class="test-content">
            @if (currentQuestion != null)
            {
                <div class="question-container">
                    <h2>@currentQuestion.QuestionText</h2>

                    <div class="options-container">
                        @foreach (var option in currentQuestion.Options.OrderBy(o => o.OrderNumber))
                        {
                            <label class="option-label">
                                <input type="radio"
                                       name="answer"
                                       value="@option.Id"
                                       @onchange="@((ChangeEventArgs e) => SelectAnswer(option.Id))" />
                                <span>@option.OptionText</span>
                            </label>
                        }
                    </div>
                </div>
            }

            <div class="test-actions">
                <button class="btn btn-outline-secondary"
                        @onclick="PreviousQuestion"
                        disabled="@(currentQuestionIndex == 0)">
                    Назад
                </button>

                @if (currentQuestionIndex < questionsList.Count - 1)
                {
                    <button class="btn btn-primary" @onclick="NextQuestion">
                        Далее
                    </button>
                }
                else
                {
                    <button class="btn btn-success" @onclick="SubmitTest">
                        Завершить тест
                    </button>
                }
            </div>
        </div>
    </div>
}

<style>
    .test-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .test-header {
        margin-bottom: 40px;
    }

        .test-header h1 {
            margin: 0 0 20px 0;
            color: #333;
        }

    .test-progress {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .progress-bar {
        width: 100%;
        height: 8px;
        background: #eee;
        border-radius: 4px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        transition: width 0.3s;
    }

    .test-content {
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin-bottom: 30px;
    }

    .question-container h2 {
        margin-top: 0;
        color: #333;
        margin-bottom: 30px;
    }

    .options-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-bottom: 30px;
    }

    .option-label {
        display: flex;
        align-items: center;
        padding: 15px;
        border: 2px solid #eee;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .option-label:hover {
            border-color: #667eea;
            background: #f9f9f9;
        }

        .option-label input[type="radio"] {
            margin-right: 15px;
            cursor: pointer;
        }

        .option-label span {
            flex: 1;
            color: #333;
        }

    .test-actions {
        display: flex;
        gap: 15px;
        justify-content: space-between;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-primary {
        background: #667eea;
        color: white;
    }

        .btn-primary:hover:not(:disabled) {
            background: #5568d3;
        }

    .btn-success {
        background: #28a745;
        color: white;
    }

        .btn-success:hover {
            background: #218838;
        }

    .btn-outline-secondary {
        border: 1px solid #ddd;
        color: #333;
        background: white;
    }

        .btn-outline-secondary:hover:not(:disabled) {
            border-color: #667eea;
            color: #667eea;
        }

    .btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .test-completion-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 80px 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    .completion-card {
        background: white;
        padding: 50px;
        border-radius: 8px;
        box-shadow: 0 2px 16px rgba(0,0,0,0.1);
        text-align: center;
    }

        .completion-card h1 {
            margin-top: 0;
            color: #333;
        }

    .score-display {
        margin: 30px 0;
        padding: 30px;
        background: #f9f9f9;
        border-radius: 6px;
    }

        .score-display h2 {
            margin: 0 0 10px 0;
            color: #333;
        }

    .score-percentage {
        font-size: 2.5rem;
        font-weight: bold;
        color: #667eea;
        margin: 10px 0;
    }

    .result-status {
        margin: 15px 0 0 0;
        font-weight: 600;
        font-size: 1.1rem;
    }

        .result-status.passed {
            color: #28a745;
        }

        .result-status.failed {
            color: #dc3545;
        }

    .completion-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
    }
</style>

@code {
    [Parameter]
    public int Id { get; set; }

    private Test? test;
    private List<Question> questionsList = new();
    private int currentQuestionIndex = 0;
    private Dictionary<int, int> answers = new();
    private bool testCompleted = false;
    private int score = 0;
    private int totalQuestions = 0;
    private int scorePercentage = 0;
    private bool isPassed = false;

    protected override async Task OnInitializedAsync()
    {
        test = new Test
        {
            Id = Id,
            Title = "Тест по основам программирования",
            Description = "Проверьте ваши знания",
            CourseId = 1,
            PassingScore = 70,
            TimeoutMinutes = 60,
            IsActive = true,
            Questions = new List<Question>
            {
                new Question
                {
                    Id = 1,
                    QuestionText = "Что такое переменная?",
                    TestId = Id,
                    QuestionType = 1,
                    OrderNumber = 1,
                    Weight = 1,
                    Options = new List<QuestionOption>
                    {
                        new QuestionOption { Id = 1, QuestionId = 1, OptionText = "Именованное значение", IsCorrect = true, OrderNumber = 1 },
                        new QuestionOption { Id = 2, QuestionId = 1, OptionText = "Функция", IsCorrect = false, OrderNumber = 2 },
                        new QuestionOption { Id = 3, QuestionId = 1, OptionText = "Класс", IsCorrect = false, OrderNumber = 3 }
                    }
                }
            }
        };

        questionsList = test.Questions.ToList();
        totalQuestions = questionsList.Count;
    }

    private Question? currentQuestion => questionsList.ElementAtOrDefault(currentQuestionIndex);
    private int progressPercentage => totalQuestions > 0 ? (currentQuestionIndex + 1) * 100 / totalQuestions : 0;

    private void SelectAnswer(int optionId)
    {
        answers[currentQuestionIndex] = optionId;
    }

    private void NextQuestion()
    {
        if (currentQuestionIndex < questionsList.Count - 1)
        {
            currentQuestionIndex++;
        }
    }

    private void PreviousQuestion()
    {
        if (currentQuestionIndex > 0)
        {
            currentQuestionIndex--;
        }
    }

    private void SubmitTest()
    {
        CalculateScore();
        testCompleted = true;
    }

    private void CalculateScore()
    {
        score = 0;
        foreach (var answer in answers)
        {
            var question = questionsList[answer.Key];
            var selectedOption = question.Options.FirstOrDefault(o => o.Id == answer.Value);

            if (selectedOption?.IsCorrect ?? false)
            {
                score++;
            }
        }

        scorePercentage = totalQuestions > 0 ? (score * 100) / totalQuestions : 0;
        isPassed = scorePercentage >= test!.PassingScore;
    }

    private void RetakTest()
    {
        currentQuestionIndex = 0;
        answers.Clear();
        testCompleted = false;
        score = 0;
        scorePercentage = 0;
    }

    private void GoToCourse()
    {
        if (test != null)
        {
            Navigation.NavigateTo($"/courses/{test.CourseId}");
        }
    }
}
