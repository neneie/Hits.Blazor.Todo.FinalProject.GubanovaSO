@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .page {
        display: flex;
        flex-direction: row;
    }

    .sidebar {
        width: 250px;
        background: #f7f7f7;
        border-right: 1px solid #d0d0d0;
    }

    main {
        flex: 1;
        padding: 0 20px;
    }

    .top-row {
        background: #f7f7f7;
        border-bottom: 1px solid #d0d0d0;
        padding: 10px 0;
    }

    .top-row a {
        margin-left: auto;
    }

    .content {
        padding-top: 1.5rem;
    }
</style>